<div id="contact-form">
  <%= form_with(model: contact, url: contacts_path, class: "space-y-6", data: { turbo: true }) do |f| %>
    <div>
      <%= f.label :name, "Your Name", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.text_field :name, 
          required: true,
          placeholder: "John Smith",
          class: "w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
    </div>
    
    <div>
      <%= f.label :email, "Your Email", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.email_field :email, 
          required: true,
          placeholder: "john@example.com",
          class: "w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
    </div>
    
    <div>
      <%= f.label :message, "What data do you need? Please be as specific as possible.", class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= f.text_area :message, 
          required: true,
          rows: 6,
          placeholder: "I need to scrape product information from [website]. I'm interested in product names, prices, descriptions, and availability. I need the data delivered as CSV once per week.",
          class: "w-full px-4 py-3 rounded-lg bg-gray-800/50 border border-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" %>
    </div>
    
    <%= f.button type: "submit", 
        class: "w-full flex items-center justify-center bg-accent-500 hover:bg-accent-600 text-white py-3 px-6 rounded-lg font-medium text-lg transition-all hover:scale-105 hover:shadow-glow" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="22" y1="2" x2="11" y2="13"/>
        <polygon points="22 2 15 22 11 13 2 9 22 2"/>
      </svg>
      Send and Get Pricing
    <% end %>
    
    <p class="text-xs text-gray-400 text-center">
      By submitting this form, you agree to our <%= link_to "Privacy Policy", "#", class: "text-primary-400 hover:text-primary-300" %> and <%= link_to "Terms of Service", "#", class: "text-primary-400 hover:text-primary-300" %>.
    </p>
  <% end %>
</div>